@model Fs_test.Models.Tasks

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3>Deseas eliminar la tarea?</h3>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles de la tarea</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Titulo
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-3">
                Descripcion
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-3">
                Creado En
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Created_at)
            </dd>

            <dt class="col-sm-3">
                Expira En
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Expires_at)
            </dd>

            <dt class="col-sm-3">
                Completado
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Completed)
            </dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mt-3">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        @Html.ActionLink("Regrasar", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
