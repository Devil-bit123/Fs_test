@model Fs_test.Models.Tasks

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles de la tarea</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Titulo
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-3">
                Descripcion
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-3">
                Creado En
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Created_at)
            </dd>

            <dt class="col-sm-3">
                Expira En
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Expires_at)
            </dd>

            <dt class="col-sm-3">
                Completado
            </dt>
            <dd class="col-sm-9">
                @if (Model.Completed)
                {
                    <span style="color:black" class="badge badge-success">Completado</span>
                }
                else
                {
                    <span style="color:black" class="badge badge-warning">Pendiente</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-secondary ml-2" })
</div>
